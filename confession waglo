    <script>
        let adminPassword = "secret123"; // Change this to your secret password
        
        // Load confessions when page loads (for admin only)
        document.addEventListener('DOMContentLoaded', function() {
            loadAdminConfessions();
        });

        function validateEmail(email) {
            const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return re.test(email);
        }

        function sendConfession() {
            const text = document.getElementById('confessionText').value;
            const email = document.getElementById('recipientEmail').value;
            const errorElement = document.getElementById('emailError');
            const successMessage = document.getElementById('successMessage');
            
            // Clear previous errors
            errorElement.textContent = '';
            successMessage.style.display = 'none';
            
            // Validation
            if (!text.trim()) {
                alert('Please write a confession before sending!');
                return;
            }
            
            if (!email.trim()) {
                errorElement.textContent = 'Email is required!';
                return;
            }
            
            if (!validateEmail(email)) {
                errorElement.textContent = 'Please enter a valid email address!';
                return;
            }
            
            // Create confession card
            const confession = {
                text: text,
                recipient: email,
                sender: 'Anonymous',
                timestamp: new Date().toLocaleString(),
                id: Date.now(),
                userInfo: 'User-' + Math.floor(Math.random() * 1000) // Simulated user ID
            };
            
            // Save to localStorage
            saveConfession(confession);
            
            // Clear form and show success
            document.getElementById('confessionText').value = '';
            document.getElementById('recipientEmail').value = '';
            successMessage.style.display = 'block';
            
            // Hide success message after 3 seconds
            setTimeout(() => {
                successMessage.style.display = 'none';
            }, 3000);
        }

        function saveConfession(confession) {
            const confessions = JSON.parse(localStorage.getItem('confessions') || '[]');
            confessions.unshift(confession); // Add to beginning (newest first)
            localStorage.setItem('confessions', JSON.stringify(confessions));
            loadAdminConfessions(); // Update admin view if open
        }

        function loadAdminConfessions() {
            const adminContainer = document.getElementById('adminConfessionsContainer');
            const confessionCount = document.getElementById('confessionCount');
            const confessions = JSON.parse(localStorage.getItem('confessions') || '[]');
            
            // Update confession count
            confessionCount.textContent = confessions.length;
            
            // Admin view (with sender info) - ONLY visible through secret code
            if (confessions.length === 0) {
                adminContainer.innerHTML = '<div class="empty-state">No confessions yet. Wait for people to send them!</div>';
            } else {
                adminContainer.innerHTML = confessions.map(confession => `
                    <div class="admin-card">
                        <div class="confession-text">"${confession.text}"</div>
                        <div class="confession-meta">
                            <span>To: ${confession.recipient}</span>
                            <span>${confession.timestamp}</span>
                        </div>
                        <div class="sender-info">
                            <strong>Sender ID:</strong> ${confession.userInfo} | 
                            <strong>Confession ID:</strong> ${confession.id}
                        </div>
                    </div>
                `).join('');
            }
        }

        function toggleAdminPanel() {
            const panel = document.getElementById('adminPanel');
            const overlay = document.getElementById('adminOverlay');
            
            if (panel.style.display === 'block') {
                panel.style.display = 'none';
                overlay.style.display = 'none';
            } else {
                // Ask for password
                const password = prompt('Enter private access code:');
                if (password === adminPassword) {
                    panel.style.display = 'block';
                    overlay.style.display = 'block';
                    loadAdminConfessions(); // Refresh when opening
                } else if (password !== null) {
                    alert('Access Denied! Invalid code.');
                }
            }
        }

        function clearAllConfessions() {
            if (confirm('Are you sure you want to delete ALL confessions? This cannot be undone!')) {
                localStorage.removeItem('confessions');
                loadAdminConfessions();
                alert('All confessions cleared!');
            }
        }
    </script>
